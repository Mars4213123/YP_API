<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2D2D2D"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Изображение рецепта -->
        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Recipe image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Название рецепта -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Название рецепта"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/ivFavorite"
            app:layout_constraintStart_toEndOf="@id/ivRecipeImage"
            app:layout_constraintTop_toTopOf="@id/ivRecipeImage"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Калории -->
        <TextView
            android:id="@+id/tvRecipeCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450 ккал"
            android:textColor="#BBBBBB"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvRecipeTitle"
            app:layout_constraintTop_toBottomOf="@id/tvRecipeTitle"
            android:layout_marginTop="4dp" />

        <!-- Время приготовления -->
        <TextView
            android:id="@+id/tvRecipeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 мин"
            android:textColor="#BBBBBB"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvRecipeTitle"
            app:layout_constraintTop_toBottomOf="@id/tvRecipeCalories"
            android:layout_marginTop="2dp" />

        <!-- Сложность -->
        <TextView
            android:id="@+id/tvRecipeDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/tvRecipeTime"
            app:layout_constraintBaseline_toBaselineOf="@id/tvRecipeTime"
            android:layout_marginStart="16dp" />

        <!-- Иконка избранного -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite"
            android:contentDescription="Favorite icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>