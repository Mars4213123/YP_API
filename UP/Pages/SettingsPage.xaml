<Page x:Class="UP.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Настройки"
      Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="⚙️ Настройки" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

        <!-- Настройки -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Профиль -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="👤 Профиль" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                        <StackPanel>
                            <TextBlock Text="Имя:" Foreground="#CCCCCC" FontSize="12"/>
                            <TextBox x:Name="UserNameTextBox" Background="#1E1E1E" Foreground="White" BorderBrush="#404040" Padding="10" Margin="0,5,0,10"/>

                            <TextBlock Text="Email:" Foreground="#CCCCCC" FontSize="12"/>
                            <TextBox x:Name="UserEmailTextBox" Background="#1E1E1E" Foreground="White" BorderBrush="#404040" Padding="10" Margin="0,5,0,10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Диетические предпочтения -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🍽️ Диетические предпочтения" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                        <CheckBox x:Name="GlutenFreeSetting" Content="Без глютена" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="LactoseFreeSetting" Content="Без лактозы" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="VeganSetting" Content="Веган" Foreground="White" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Уведомления -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🔔 Уведомления" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                        <CheckBox x:Name="MealRemindersSetting" Content="Напоминания о приемах пищи" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="ShoppingRemindersSetting" Content="Напоминания о покупках" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="CookingTimersSetting" Content="Таймеры приготовления" Foreground="White" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Сохранение -->
                <Button Content="💾 Сохранить настройки" 
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,10"
                        Click="SaveSettings_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>