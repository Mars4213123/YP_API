<Page x:Class="UP.Pages.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Избранное"
      Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⭐ Избранные рецепты" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="AllRecipesRadio" Content="Все" Foreground="White" Margin="0,0,10,0" IsChecked="True"/>
                <RadioButton x:Name="RecentRecipesRadio" Content="Недавние" Foreground="White" Margin="0,0,10,0"/>
                <RadioButton x:Name="MostUsedRadio" Content="Часто используемые" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Избранные рецепты -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="FavoritesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="{Binding Category}" FontSize="12" Foreground="#CCCCCC" Margin="0,5,0,0"/>
                                    <TextBlock Text="Добавлено: {Binding AddedDate}" FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="👁️" 
                                            Background="#2196F3"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Margin="0,0,5,0"
                                            Click="ViewRecipe_Click"/>
                                    <Button Content="🗑️" 
                                            Background="#FF4444"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Click="RemoveFromFavorites_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>