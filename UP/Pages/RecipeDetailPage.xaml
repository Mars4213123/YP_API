<Page x:Class="UP.Pages.RecipeDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Рецепт"
      Background="#1E1E1E">

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock x:Name="RecipeTitle" 
                           Text="Название рецепта" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,20"/>

                <!-- Информация о рецепте -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📊 Информация" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="⏱️ Время" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="CookingTimeText" Text="30 мин" Foreground="White" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="🔥 Калории" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="CaloriesText" Text="350 ккал" Foreground="White" FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="🌍 Кухня" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="CuisineText" Text="Итальянская" Foreground="White" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Ингредиенты -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🛒 Ингредиенты" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                        <ItemsControl x:Name="IngredientsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="White" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Шаги приготовления -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="👨‍🍳 Приготовление" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                        <ItemsControl x:Name="StepsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" CornerRadius="5" Padding="10" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding}" Foreground="White" TextWrapping="Wrap"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="⏰ Запустить таймер" 
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,10"
                            Margin="0,0,10,0"
                            Click="StartTimer_Click"/>

                    <Button Content="⭐ В избранное" 
                            Background="#FFD700"
                            Foreground="Black"
                            BorderThickness="0"
                            Padding="15,10"
                            Click="AddToFavorites_Click"/>

                    <Button Content="🔙 Назад" 
                            Background="#666"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,10"
                            Margin="10,0,0,0"
                            Click="BackButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>