<Page x:Class="UP.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="История"
      Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="📊 История меню" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>

            <Button Content="🔄 Повторить меню" 
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="15,10"
                    Margin="20,0,0,0"
                    Click="RepeatMenu_Click"/>
        </StackPanel>

        <!-- История -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="HistoryItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="{Binding Period}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>

                                <TextBlock Text="{Binding DateRange}" 
                                           FontSize="12" 
                                           Foreground="#CCCCCC"
                                           Margin="0,5,0,0"/>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="👁️ Просмотр" 
                                            Background="#2196F3"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Margin="0,0,10,0"
                                            Click="ViewHistory_Click"/>

                                    <Button Content="📊 Статистика" 
                                            Background="#FF9800"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Click="ShowStats_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>