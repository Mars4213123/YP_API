<Window x:Class="UP.Pages.RegIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP.Pages"
        mc:Ignorable="d"
        Title="RegIn" Height="650" Width="800">
    <Grid Background="White">
        <Border Background="#1E1E1E" 
            CornerRadius="10"
            BorderBrush="#333333"
            BorderThickness="1">

            <StackPanel VerticalAlignment="Center" Margin="30">

                <!-- Заголовок -->
                <TextBlock Text="Регистрация" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

                <!-- Поле имени пользователя -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Имя пользователя" 
                           Foreground="#CCCCCC" 
                           FontSize="12" 
                           Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                         Background="#1E1E1E"
                         Foreground="White"
                         BorderBrush="#404040"
                         BorderThickness="1"
                         Padding="15,10"
                         FontSize="14"
                         Height="45"/>
                </StackPanel>

                <!-- Поле email -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Email" 
                           Foreground="#CCCCCC" 
                           FontSize="12" 
                           Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox" 
                         Background="#1E1E1E"
                         Foreground="White"
                         BorderBrush="#404040"
                         BorderThickness="1"
                         Padding="15,10"
                         FontSize="14"
                         Height="45"/>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Пароль" 
                           Foreground="#CCCCCC" 
                           FontSize="12" 
                           Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderBrush="#404040"
                             BorderThickness="1"
                             Padding="15,10"
                             FontSize="14"
                             Height="45"/>
                </StackPanel>

                <!-- Подтверждение пароля -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Подтвердите пароль" 
                           Foreground="#CCCCCC" 
                           FontSize="12" 
                           Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderBrush="#404040"
                             BorderThickness="1"
                             Padding="15,10"
                             FontSize="14"
                             Height="45"/>
                </StackPanel>

                <!-- Кнопка регистрации -->
                <Button Content="Зарегистрироваться" 
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,12"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Height="50"
                    Cursor="Hand"
                    Click="RegisterButton_Click"
                    Margin="0,0,0,15"/>

                <!-- Ссылка на вход -->
                <TextBlock Text="Уже есть аккаунт? Войдите" 
                       Foreground="#4CAF50" 
                       FontSize="13"
                       TextAlignment="Center"
                       Cursor="Hand"
                       MouseLeftButtonDown="LoginText_MouseLeftButtonDown"
                       TextDecorations="Underline"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
