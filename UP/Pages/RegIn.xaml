<Page x:Class="UP.Pages.RegIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="RegIn"
      
      Background="#1E1E1E">

    <Page.Resources>
        <Style x:Key="SimpleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#666"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#777"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="#2D2D30" 
                BorderBrush="#404040"
                BorderThickness="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
                <StackPanel Margin="40" VerticalAlignment="Center">

                    <!-- Заголовок -->
                    <TextBlock Text="Регистрация" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Основная информация -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Основная информация" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#4CAF50"
                                   Margin="0,0,0,15"/>

                        <!-- Имя пользователя -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Имя пользователя *" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12" 
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="UsernameTextBox" 
                                     Style="{StaticResource SimpleTextBox}"
                                     Height="45"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email *" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12" 
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EmailTextBox" 
                                     Style="{StaticResource SimpleTextBox}"
                                     Height="45"/>
                        </StackPanel>

                        <!-- Пароль -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Пароль *" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12" 
                                       Margin="0,0,0,5"/>
                            <PasswordBox x:Name="PasswordBox" 
                                         Background="#1E1E1E"
                                         Foreground="White"
                                         BorderBrush="#404040"
                                         BorderThickness="1"
                                         Padding="15,10"
                                         FontSize="14"
                                         Height="45">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                        </StackPanel>

                        <!-- Подтверждение пароля -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Подтверждение пароля *" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12" 
                                       Margin="0,0,0,5"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Background="#1E1E1E"
                                         Foreground="White"
                                         BorderBrush="#404040"
                                         BorderThickness="1"
                                         Padding="15,10"
                                         FontSize="14"
                                         Height="45">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Персональная информация -->
                    

                    

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Зарегистрироваться" 
                                Style="{StaticResource PrimaryButton}"
                                Height="50"
                                MinWidth="180"
                                Click="RegisterButton_Click"
                                Margin="0,0,20,0"/>

                        <Button Content="Назад" 
                                Style="{StaticResource SecondaryButton}"
                                Height="50"
                                MinWidth="120"
                                Click="BackButton_Click"/>
                    </StackPanel>

                    <!-- Ссылка на вход -->
                    <TextBlock Text="Уже есть аккаунт? Войдите" 
                               Foreground="#4CAF50" 
                               FontSize="13"
                               TextAlignment="Center"
                               Cursor="Hand"
                               Margin="0,20,0,0"
                               MouseLeftButtonDown="LoginText_MouseLeftButtonDown"
                               TextDecorations="Underline"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>