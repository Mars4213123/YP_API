<Page x:Class="UP.Pages.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="LogInPage">

    <Page.Resources>
        <!-- Стиль для текстовых полей -->
        <Style x:Key="SimpleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки входа -->
        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="#1E1E1E" 
                CornerRadius="10"
                BorderBrush="#333333"
                BorderThickness="1">

            <StackPanel VerticalAlignment="Center" Margin="30">

                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Поле имени пользователя -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Имя пользователя" 
                               Foreground="#CCCCCC" 
                               FontSize="12" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Style="{StaticResource SimpleTextBox}"
                             Height="45"/>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Пароль" 
                               Foreground="#CCCCCC" 
                               FontSize="12" 
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Background="#1E1E1E"
                                 Foreground="White"
                                 BorderBrush="#404040"
                                 BorderThickness="1"
                                 Padding="15,10"
                                 FontSize="14"
                                 Height="45">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                </StackPanel>

                <!-- Кнопка входа -->
                <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Style="{StaticResource LoginButton}"
                        Height="50"
                        Click="LoginButton_Click"
                        Margin="0,0,0,20"/>

                <!-- Ссылка на регистрацию -->
                <TextBlock Text="Нет учетной записи? Зарегистрируйтесь" 
                           Foreground="#4CAF50" 
                           FontSize="13"
                           TextAlignment="Center"
                           Cursor="Hand"
                           MouseLeftButtonDown="RegisterText_MouseLeftButtonDown"
                           TextDecorations="Underline"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
