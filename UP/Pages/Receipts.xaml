<Page x:Class="UP.Pages.Receipts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000" Background="#1E1E1E"
      Title="Receipts">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TimerButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20" Height="700" Width="1000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🍽️ Рецепты на неделю" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White"/>
            <TextBlock Text="Генератор меню с учетом аллергий и продуктов в холодильнике" 
                       FontSize="14" 
                       Foreground="#CCCCCC"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Настройки -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Продукты в холодильнике -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📦 Продукты в холодильнике" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <TextBox x:Name="NewProductTextBox" 
                                     Background="#1E1E1E"
                                     Foreground="White"
                                     BorderBrush="#404040"
                                     Padding="10"
                                     Height="37"
                                     Margin="0,0,0,10"/>

                            <Button Content="Добавить продукт" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="AddProduct_Click"/>

                            <ListView x:Name="ProductsListView" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Margin="0,10,0,0"
                                      MaxHeight="200">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>
                                            <Button Grid.Column="1" 
                                                    Content="×" 
                                                    Foreground="#FF4444"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="5,0"
                                                    Click="RemoveProduct_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Аллергии и ограничения -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="⚠️ Аллергии и ограничения" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <CheckBox x:Name="GlutenCheckBox" 
                                      Content="Без глютена" 
                                      Foreground="White"
                                      Margin="0,5"/>
                            <CheckBox x:Name="LactoseCheckBox" 
                                      Content="Без лактозы" 
                                      Foreground="White"
                                      Margin="0,5"/>
                            <CheckBox x:Name="NutsCheckBox" 
                                      Content="Без орехов" 
                                      Foreground="White"
                                      Margin="0,5"/>
                            <CheckBox x:Name="SeafoodCheckBox" 
                                      Content="Без морепродуктов" 
                                      Foreground="White"
                                      Margin="0,5"/>


                            <Label Foreground="White" Content="Другие ограничения..." />
                            <TextBox x:Name="OtherAllergiesTextBox"
                                     Background="#1E1E1E"
                                     Foreground="White"
                                     BorderBrush="#404040"
                                     Padding="10"
                                     Height="39"
                                     Margin="0,10,0,0"
                                     TextChanged="OtherAllergiesTextBox_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка генерации -->
                    <Button Content="🎲 Сгенерировать меню на неделю" 
                            Style="{StaticResource PrimaryButton}"
                            Height="50"
                            FontSize="14"
                            FontWeight="Bold"
                            Click="GenerateMenu_Click"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Центральная панель - Меню на неделю -->
            <ScrollViewer Grid.Column="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="15,0">
                <ItemsControl x:Name="WeeklyMenuItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Day}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#4CAF50"
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="{Binding Meal}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="12" 
                                               Foreground="#CCCCCC"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="⏱️ Таймер" 
                                                Style="{StaticResource TimerButton}"
                                                Click="StartTimer_Click"
                                                Margin="0,0,10,0"/>
                                        <Button Content="📝 Рецепт" 
                                                Background="#FF9800"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="10,5"
                                                FontSize="12"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Правая панель - Список покупок и таймеры -->
            <StackPanel Grid.Column="2" Margin="15,0,0,0">
                <!-- Активные таймеры -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="⏰ Активные таймеры" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <ItemsControl x:Name="ActiveTimersItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" 
                                            CornerRadius="5" 
                                            Padding="10" 
                                            Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                           Foreground="White" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding TimeLeft}" 
                                                           Foreground="#4CAF50" 
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" 
                                                    Content="⏹️" 
                                                    Background="Transparent"
                                                    Foreground="#FF4444"
                                                    BorderThickness="0"
                                                    Click="StopTimer_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoTimersText" 
                                   Text="Нет активных таймеров" 
                                   Foreground="#666" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                    </StackPanel>
                </Border>

                <!-- Список покупок -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🛒 Список покупок" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <ListView x:Name="ShoppingListListView" 
                                  Background="Transparent"
                                  BorderThickness="0"
                                  MaxHeight="300">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding}" 
                                              Foreground="White"
                                              Margin="5,2"
                                              Checked="ShoppingItem_Checked"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Button Content="📄 Экспорт списка" 
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,10,0,0"
                                Click="ExportShoppingList_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Нижняя панель -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="🔙 Назад" 
                    Background="#666" 
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,10"
                    Cursor="Hand"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
