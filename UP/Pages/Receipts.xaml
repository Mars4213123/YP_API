<Page x:Class="UP.Pages.Receipts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000" Background="#1E1E1E"
      Title="Receipts">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="MenuCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="15" Width="970">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="🍽️ Планировщик меню" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Выберите или создайте меню на неделю" 
                               FontSize="13" 
                               Foreground="#CCCCCC"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <!-- Кнопка Избранное -->
                <Button Grid.Column="1"
                        Content="⭐ Избранное"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,6"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="OpenFavorites_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
            </Grid>

            <!-- Основной контент -->
            <Grid Grid.Row="1" Height="500">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*" MaxWidth="400"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- Левая панель - Доступные меню -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Доступные меню -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="📋 Доступные меню" 
                                       FontSize="15" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Выберите одно из готовых меню:" 
                                       FontSize="11" 
                                       Foreground="#CCCCCC"
                                       Margin="0,0,0,8"/>

                            <ListView x:Name="AvailableMenusListView" 
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Height="120"
                                      SelectionChanged="AvailableMenu_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource MenuCardStyle}"
                                                MouseLeftButtonDown="MenuCard_MouseLeftButtonDown">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="13" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="White"
                                                           Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           FontSize="10" 
                                                           Foreground="#CCCCCC"
                                                           TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Рецептов: " 
                                                               FontSize="10" 
                                                               Foreground="#888"/>
                                                    <TextBlock Text="{Binding RecipeCount}" 
                                                               FontSize="10" 
                                                               Foreground="#4CAF50"
                                                               Margin="3,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button Content="🔄 Обновить меню" 
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,8,0,0"
                                    Click="RefreshMenus_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Продукты в холодильнике -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="1">
                        <ScrollViewer Style="{StaticResource ScrollViewerStyle}" MaxHeight="280">
                            <StackPanel>
                                <TextBlock Text="📦 Продукты в холодильнике" 
                                           FontSize="15" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"
                                           Margin="0,0,0,8"/>

                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="NewProductTextBox" 
                                             Background="#1E1E1E"
                                             Foreground="White"
                                             BorderBrush="#404040"
                                             Padding="8"
                                             Height="32"
                                             Width="150"
                                             Margin="0,0,5,0"/>

                                    <Button Content="Добавить" 
                                            Style="{StaticResource PrimaryButton}"
                                            Click="AddProduct_Click"
                                            Padding="10,8"/>
                                </StackPanel>

                                <ListView x:Name="ProductsListView" 
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Margin="0,8,0,0"
                                          Height="180">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding}" 
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"/>
                                                <Button Grid.Column="1" 
                                                        Content="×" 
                                                        Foreground="#FF4444"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="6,0"
                                                        FontSize="12"
                                                        Click="RemoveProduct_Click"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- Центральная панель - Текущее меню -->
                <Grid Grid.Column="1" Margin="5,0">
                    <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
                        <StackPanel>
                            <!-- Заголовок текущего меню -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock x:Name="CurrentMenuTitle" 
                                               Text="Текущее меню не выбрано" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="White"
                                               Margin="0,0,0,4"/>
                                    <TextBlock x:Name="CurrentMenuDescription" 
                                               Text="Выберите меню из списка слева" 
                                               FontSize="11" 
                                               Foreground="#CCCCCC"
                                               Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Button x:Name="SelectMenuButton"
                                                Content="✅ Выбрать меню"
                                                Style="{StaticResource PrimaryButton}"
                                                Click="SelectCurrentMenu_Click"
                                                Margin="0,0,8,0"
                                                Padding="10,6"
                                                IsEnabled="False"/>

                                        <Button Content="🛒 Список покупок"
                                                Style="{StaticResource PrimaryButton}"
                                                Click="GenerateShoppingList_Click"
                                                Background="#2196F3"
                                                Padding="10,6"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Дни меню -->
                            <ItemsControl x:Name="WeeklyMenuItemsControl" Margin="0,0,0,10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Day}" 
                                                           FontSize="16" 
                                                           FontWeight="Bold" 
                                                           Foreground="#4CAF50"
                                                           Margin="0,0,0,6"/>

                                                <TextBlock Text="{Binding Meal}" 
                                                           FontSize="13" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="White"
                                                           Margin="0,0,0,4"/>

                                                <TextBlock Text="{Binding Description}" 
                                                           FontSize="11" 
                                                           Foreground="#CCCCCC"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,6"/>

                                                <Button Content="📝 Открыть рецепт" 
                                                        Background="#FF9800"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        Cursor="Hand"
                                                        Click="OpenRecipe_Click"
                                                        HorizontalAlignment="Left"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Правая панель - Список покупок -->
                <Grid Grid.Column="2" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Список покупок -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="0" Margin="0,0,0,10">
                        <ScrollViewer Style="{StaticResource ScrollViewerStyle}" MaxHeight="300">
                            <StackPanel>
                                <TextBlock Text="🛒 Список покупок" 
                                           FontSize="15" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"
                                           Margin="0,0,0,8"/>

                                <TextBlock x:Name="ShoppingListInfo" 
                                           Text="Список покупок будет создан автоматически при выборе меню" 
                                           FontSize="11" 
                                           Foreground="#CCCCCC"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,8"/>

                                <ListView x:Name="ShoppingListListView" 
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Height="200">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox IsChecked="{Binding IsPurchased}"
                                                          Margin="0,0,6,0"
                                                          VerticalAlignment="Center"
                                                          Checked="ShoppingItem_Checked"
                                                          Unchecked="ShoppingItem_Unchecked"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Name}" 
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"/>
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Quantity, StringFormat={}{0} {1}}"
                                                           Foreground="#888"
                                                           FontSize="10"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Button Content="📄 Экспорт" 
                                            Style="{StaticResource PrimaryButton}"
                                            Click="ExportShoppingList_Click"
                                            Margin="0,0,6,0"
                                            Padding="8,5"/>

                                    <Button Content="🗑️ Очистить" 
                                            Background="#FF4444"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="8,5"
                                            FontSize="11"
                                            Cursor="Hand"
                                            Click="ClearShoppingList_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Информация о пользователе -->
                    <Border Style="{StaticResource CardStyle}" Grid.Row="1">
                        <StackPanel>
                            <TextBlock Text="👤 Информация" 
                                       FontSize="15" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock x:Name="UserInfoText" 
                                       Text="Пользователь: Загрузка..." 
                                       FontSize="11" 
                                       Foreground="#CCCCCC"
                                       Margin="0,0,0,4"/>

                            <TextBlock Text="Обновлено: Сегодня" 
                                       FontSize="10" 
                                       Foreground="#888"
                                       Margin="0,0,0,8"/>

                            <Button Content="🔄 Обновить данные" 
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,8,0,0"
                                    Click="RefreshData_Click"
                                    Padding="8,5"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Нижняя панель -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="🔙 Выйти" 
                        Background="#666" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="13"
                        Cursor="Hand"
                        Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>