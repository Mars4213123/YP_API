<Page x:Class="UP.Pages.SearchRecipesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поиск рецептов"
      Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="🔍 Поиск рецептов" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

        <!-- Поиск и фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" 
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#404040"
                     Padding="15,10"
                     FontSize="14"
                     Text="Введите название или ингредиент"/>

            <Button Content="Поиск" 
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,12"
                    Margin="10,0,0,0"
                    Click="SearchButton_Click"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,50,0,20">
            <ComboBox x:Name="CuisineFilter" 
                      Width="150" 
                      Background="#1E1E1E"
                      Foreground="White"
                      Margin="0,0,10,0"
                      ItemsSource="{Binding Cuisines}"/>

            <ComboBox x:Name="TimeFilter" 
                      Width="150" 
                      Background="#1E1E1E"
                      Foreground="White"
                      Margin="0,0,10,0"
                      ItemsSource="{Binding CookingTimes}"/>

            <CheckBox x:Name="VeganFilter" Content="Веган" Foreground="White" Margin="0,0,10,0"/>
            <CheckBox x:Name="QuickFilter" Content="Быстрое" Foreground="White"/>
        </StackPanel>

        <!-- Результаты поиска -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="RecipesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#CCCCCC" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="⏱️ " Foreground="#666" FontSize="11"/>
                                        <TextBlock Text="{Binding CookingTime}" Foreground="#666" FontSize="11"/>
                                        <TextBlock Text=" 🍽️ " Foreground="#666" FontSize="11"/>
                                        <TextBlock Text="{Binding Cuisine}" Foreground="#666" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="👁️" 
                                            Background="#2196F3"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Margin="0,0,5,0"
                                            Click="ViewRecipe_Click"/>
                                    <Button Content="⭐" 
                                            Background="#FFD700"
                                            Foreground="Black"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Click="AddToFavorites_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>